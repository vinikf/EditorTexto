@model EditorTexto.Models.Documento

@{
    ViewData["Title"] = "Delete";
}

<h3>Você tem certeza que deseja excluir esse documento?</h3>
<div class="row">
    <dl class="mt-3 col-md-4">
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dd class = "col-sm-10">
            <textarea id="tiny" asp-for="Corpo" style="width: 60vw; height: 80vh"></textarea>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

<div>
    <a class="btn btn-info mt-3" asp-action="Index">Voltar</a>
</div>
