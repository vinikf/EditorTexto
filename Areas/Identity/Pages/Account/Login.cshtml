@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row align-items-center justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 class="text-center">Entrar no Documenteiro</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Senha</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Entrar</button>
                </div>
                <div class="text-center">
                    <p class="mt-4 text-center">
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a conta?</a>
                    </p>
                    <p>
                        <a class="btn btn-lg btn-success" role="button" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar nova conta</a>
                    </p>
                </div>  
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
